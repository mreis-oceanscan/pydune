<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lauv">
  
  <!-- Arguments -->
  <xacro:arg name="namespace" default="lauv"/>
  <xacro:arg name="vehicle_id" default="1"/>
  <xacro:arg name="color_scheme" default="red"/>

  <!-- Properties -->
  <xacro:property name="mass" value="18"/>
  <xacro:property name="length" value="1.3"/>
  <xacro:property name="radius" value="0.1"/>
  <xacro:property name="cog" value="0 0 0"/>
  
  <!-- Visual mesh file -->
  <xacro:property name="visual_mesh_file" value="package://lauv/meshes/body.dae"/>
  <xacro:property name="collision_mesh_file" value="file://$(find lauv)/meshes/body.stl"/>

  <!-- Base link -->
  <link name="$(arg namespace)/base_link">
    <visual>
      <origin xyz="0 0 0" rpy="3.14 0 0"/>
      <geometry>
        <mesh filename="${visual_mesh_file}" scale="1 1 1" />
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.3 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${collision_mesh_file}" scale="1 1 1" />
      </geometry>
    </collision>

    <inertial>
      <mass value="${mass}" />
      <origin xyz="${cog}" rpy="0 0 0"/>
      <inertia ixx="${0.5 * mass * radius * radius}" ixy="0" ixz="0"
               iyy="${0.083333333 * mass * 3 * radius * radius + 0.083333333 * mass * length * length}" iyz="0"
               izz="${0.083333333 * mass * 3 * radius * radius + 0.083333333 * mass * length * length}" />
    </inertial>

  </link>

  <!-- Fins -->
  <xacro:macro name="fin_macro" params="name x y z roll pitch yaw color">
    <link name="$(arg namespace)/${name}">
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lauv/meshes/${color}_fin.dae" scale="1 1 1"/>
        </geometry>
      </visual>
    </link>

    <joint name="$(arg namespace)/${name}_joint" type="revolute">
      <parent link="$(arg namespace)/base_link"/>
      <child link="$(arg namespace)/${name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="0 0 -1"/>
      <limit lower="-0.5" upper="0.5" effort="20" velocity="2"/>
    </joint>
  </xacro:macro>

  <!-- Add fins -->
  <xacro:fin_macro name="fin_top" x="-0.45" y="0" z="0.03" roll="0" pitch="0" yaw="0" color="red"/>
  <xacro:fin_macro name="fin_bottom" x="-0.45" y="0" z="-0.03" roll="0" pitch="3.14" yaw="3.14" color="red"/>

  <xacro:fin_macro name="fin_port" x="-0.45" y="0.031" z="0" roll="-1.57" pitch="0" yaw="0" color="black"/>
  <xacro:fin_macro name="fin_starboard" x="-0.45" y="-0.031" z="0" roll="1.57" pitch="0" yaw="0" color="black"/>

  <!-- Propeller -->
  <link name="$(arg namespace)/propeller">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://lauv/meshes/propeller.dae" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <joint name="$(arg namespace)/propeller_joint" type="continuous">
    <parent link="$(arg namespace)/base_link"/>
    <child link="$(arg namespace)/propeller"/>
    <origin xyz="-0.57 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

</robot>